---
interface Props {
  title?: string;
  email: string;
}

const { 
  title = "Kontakt",
  email
} = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 py-12 md:py-16">
  <h2 class="text-2xl md:text-3xl font-semibold mb-6 md:mb-8">{title}</h2>
  <div class="bg-white p-6 md:p-8 rounded-lg shadow-sm">
    <p class="text-sm md:text-base mb-4">
      Für Anfragen und weitere Informationen stehe ich Ihnen gerne zur Verfügung.
    </p>
    <a
      href={`mailto:${email}`}
      class="w-full sm:w-auto text-center inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition"
    >
      Kontakt aufnehmen
    </a>
  </div>
</section>