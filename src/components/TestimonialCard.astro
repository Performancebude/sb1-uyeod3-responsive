---
interface Props {
  quote: string;
  author: string;
  role: string;
}

const { quote, author, role } = Astro.props;
---

<div class="bg-white p-6 md:p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <div class="mb-4">
    <svg class="w-6 h-6 md:w-8 md:h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
  </div>
  <blockquote class="text-sm md:text-base text-gray-700 mb-4">{quote}</blockquote>
  <div>
    <div class="font-semibold text-sm md:text-base">{author}</div>
    <div class="text-gray-600 text-xs md:text-sm">{role}</div>
  </div>
</div>