---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative min-h-[60vh] md:min-h-[80vh] flex items-center">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-900/70"></div>
    <img
      src="/images/hero-bg.jpg"
      alt="Forensische Gutachten"
      class="w-full h-full object-cover"
      width="1920"
      height="1080"
    />
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto px-4 py-12 md:py-20 text-white">
    <div class="max-w-2xl">
      <h1 class="text-3xl md:text-5xl font-bold mb-4 md:mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-lg md:text-xl mb-6 md:mb-8 text-gray-100">
        {subtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="#contact"
          class="w-full sm:w-auto text-center inline-block bg-blue-600 text-white px-6 md:px-8 py-3 md:py-4 rounded-lg hover:bg-blue-700 transition-colors font-medium"
        >
          Kontakt aufnehmen
        </a>
        <a
          href="#about"
          class="w-full sm:w-auto text-center inline-block bg-white text-blue-900 px-6 md:px-8 py-3 md:py-4 rounded-lg hover:bg-gray-100 transition-colors font-medium"
        >
          Mehr erfahren
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block">
    <svg
      class="w-6 h-6 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"
      />
    </svg>
  </div>
</section>